<Select>:
    BoxLayout
        id: select_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Welcome'
            font_size: 32

        Button:
            text: 'Connect to EchoFighters Server'
            font_size: 24
            on_press: root.connect_server('127.0.0.1', 8008)

        BoxLayout:
            orientation: 'vertical'

        Label:
            text: 'Custom Server IP'
            font_size: 18
            halign: 'left'
            text_size: root.width-20, 20

        TextInput:
            id: server_ip
            multiline:False
            font_size: 28

        Label:
            text: 'Custom Server Port'
            font_size: 18
            halign: 'left'
            text_size: root.width-20, 20

        TextInput:
            id: server_port
            multiline:False
            font_size: 28

        Button:
            text: 'Connect'
            font_size: 24
            on_press: root.connect_server(server_ip.text, server_port.text)
