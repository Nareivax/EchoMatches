#:include lobby.kv

<Login>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Choose Your Username'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        # BoxLayout:
        #     orientation: 'vertical'
        #     Label:
        #         text: 'Password'
        #         halign: 'left'
        #         font_size: 18
        #         text_size: root.width-20, 20
        #
        #     TextInput:
        #         id: password
        #         multiline:False
        #         password:True
        #         font_size: 28

        #Button:
        #    text: 'Login'
        #    font_size: 24
        #    on_press: root.user_login(login.text)

        Button:
            text: 'Join Lobby'
            font_size: 24
            on_press: root.join_lobby(login.text)

        Button:
            text: 'Create Lobby'
            font_size: 24
            on_press: root.create_lobby(login.text)

<InviteDialog>:
    title: 'Invite Code'
    size_hint: None, None
    size: 400, 120
    auto_dismiss: False
    text: input.text

    BoxLayout:
        orientation: 'vertical'
        pos: self.pos
        size: root.size

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'Enter Invite Code'

            TextInput:
                id: input
                multiline: False
                hint_text:'Age'
                input_filter: 'int'
                on_text:

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: 'Enter'
                background_color: 255, 0, 0, 0.9

            Button:
                text: 'Cancel'
                background_color: 0, 1, 255, 0.7
                on_press: root._cancel()
